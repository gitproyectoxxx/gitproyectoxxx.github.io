  <!-- Script de contador de likes -->
  <script>
    const contadores = {};

    function incrementar(id) {
      if (!contadores[id]) contadores[id] = 0;
      contadores[id]++;
      document.getElementById("contador-" + id).innerText = contadores[id];
    }
  </script>

